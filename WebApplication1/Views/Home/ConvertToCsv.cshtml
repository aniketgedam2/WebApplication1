
@{
    ViewData["Title"] = "ConvertToCsv";
}
@model string

<p>Value: @Model</p>

<h2>Single File Upload</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post" asp-controller="Home" asp-action="SingleFileUpload"
              enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="file" name="SingleFile" class="form-control" />
            <button type="submit" name="Upload" class="btn btn-primary">Upload</button>
        </form>
    </div>
</div>

<h3 class="text-center text-uppercase">download file</h3>
@if (!string.IsNullOrEmpty(Model)){
    <ul class="list-group list-group-horizontal">
        <li class="list-group-item"><a href="@Url.Action("DownloadFile", new { fileName = @Model })">Process File</a></li>
    </ul>
}

